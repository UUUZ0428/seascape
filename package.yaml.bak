name: seascape
version: 0.1.0.0
synopsis: An improved interface for UCSD CAPE data
category: Web
author: David Cao
maintainer: david@cao.st
license: MIT
license-file: LICENSE
build-type: Simple
extra-source-files:
  - CHANGELOG.md

dependencies:
  - base >= 4 && < 5
  - aeson
  - lucid
  - Spock >=0.13.0.0
  - Spock-lucid
  - servant
  - persistent
  - persistent-template
  - persistent-postgresql
  - monad-logger
  - text
  - wai-middleware-static

library:
  source-dirs:
    src

executables:
  seascape-app:
    source-dirs: app
    main: Main.hs
    dependencies:
      - seascape
    
